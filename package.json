{
	"name": "health-timer",
	"version": "1.0.0",
	"description": "Desktop app for health reminders and break tracking",
	"main": "out/main/index.js",
	"type": "module",
	"author": "",
	"license": "ISC",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"start": "electron-vite preview",
		"build:win": "npm run build && electron-builder --win --x64",
		"build:dir": "npm run build && electron-builder --dir"
	},
	"build": {
		"appId": "com.healthtimer.app",
		"productName": "HealthTimer",
		"asar": false,
		"directories": {
			"output": "dist",
			"buildResources": "resources"
		},
		"files": [
			"out/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "resources",
				"to": "resources",
				"filter": [
					"**/*"
				]
			}
		],
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"artifactName": "${productName}-Setup-${version}.${ext}",
			"icon": "resources/icon.png",
			"requestedExecutionLevel": "asInvoker"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	},
	"keywords": [
		"electron",
		"health",
		"timer",
		"break-reminder"
	],
	"devDependencies": {
		"@types/node": "^20.19.27",
		"@types/react": "^18.3.27",
		"@types/react-dom": "^18.3.7",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.23",
		"electron": "^28.3.3",
		"electron-builder": "^26.0.12",
		"electron-vite": "^2.3.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.9.3",
		"vite": "^5.4.21"
	},
	"dependencies": {
		"electron-store": "^11.0.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"zustand": "^4.5.7"
	}
}
